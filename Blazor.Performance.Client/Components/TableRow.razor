<li class="table-row" @onclick="RowClicked">
    <div class="col col-1" data-label="Title">
        <MudHighlighter Text="@Contribution.Title" HighlightedText="@SearchTerm" />
    </div>
    <div class="col col-2" data-label="Date">@Contribution.Date</div>
    <div class="col col-3" data-label="Type">@Contribution.Type</div>
    <div class="col col-4" data-label="Language">@Contribution.Language</div>
    <div class="col col-5" data-label="Primary Tag">@Contribution.PrimaryTag</div>
</li>