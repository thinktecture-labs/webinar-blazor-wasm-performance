@if (_contribution != null)
{
	<MudDialog>
		<DialogContent>
			<EditForm class="edit-form" Model="_contribution" OnSubmit="Submit">
				<CustomInput @bind-Value="_contribution.Title" Required="@true" Label="Titel"></CustomInput>
				<CustomInput @bind-Value="_contribution.Type" Required="@true" Label="Typ"></CustomInput>
				<CustomInput @bind-Value="_contribution.PrimaryTag" PreventRendering="@false" Required="@true" Label="Primary Tag"></CustomInput>
				<SpeakerSelect @bind-Values="_contribution.Speaker"></SpeakerSelect>
				<CustomTextarea @bind-Value="_contribution.Abstract" Required="@true" Label="Beschreibung"></CustomTextarea>
			</EditForm>
		</DialogContent>
		<DialogActions>
			<MudButton ButtonType="ButtonType.Button" OnClick="Cancel">Abbrechen</MudButton>
			<MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" OnClick="Submit">Speichern</MudButton>
		</DialogActions>
	</MudDialog>
}