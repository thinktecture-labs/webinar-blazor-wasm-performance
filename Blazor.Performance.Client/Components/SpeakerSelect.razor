<MudSelect T="int" Label="Speaker" MultiSelection="true" SelectedValues="Value" SelectedValuesChanged="SpeakersChanged"
           MultiSelectionTextFunc="new Func<List<string>, string>(GetMultiSelectionText)">
    @foreach (var s in _speakers)
    {
        <MudSelectItem T="int" Value="@s.Id">@s.FirstName @s.LastName</MudSelectItem>
    }
</MudSelect>